{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jasmine": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:angular/johnpapa"
    ],
    "plugins": ["angular"],
    "rules": {
        "indent": [
            "error",
            4, {
                "SwitchCase": 1
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error", {
                "args": "none"
            }
        ],
        "no-var": "error",
        "prefer-const": "error",
        "no-console": "off",
        "angular/file-name": 2,
        "angular/controller-as-vm": "off"
    },
    "globals": {
        "angular": false,
        "inject": false,
        "require": false,
        "__dirname": false
    }
}